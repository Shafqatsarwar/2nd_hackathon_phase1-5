{
    "version": 2,
    "framework": "nextjs",
    "installCommand": "npm install",
    "buildCommand": "npm run build --workspace=src/frontend",
    "outputDirectory": "src/frontend/.next",
    "rewrites": [
        {
            "source": "/api/((?!auth).*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/docs",
            "destination": "/api/index.py"
        },
        {
            "source": "/openapi.json",
            "destination": "/api/index.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}